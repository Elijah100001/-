        function moveButton() {
            const btn = document.getElementById('noBtn');
            const x = Math.floor(Math.random() * (window.innerWidth - 100));
            const y = Math.floor(Math.random() * (window.innerHeight - 100));
            btn.style.position = "absolute";
            btn.style.left = x + 'px';
            btn.style.top = y + 'px';
        }
